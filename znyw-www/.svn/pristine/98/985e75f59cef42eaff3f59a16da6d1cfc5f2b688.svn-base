define("p.Intelligent_load",function(require,exports,module){


    var list={
        itemId:0,
        begin:"",
        end:""
    };
    var BaseInfo={};
    var time=[];
    var value=[];
    var site=$('#site');
    var submit_btn=$('#submit_btn');

    var app={
        init:function(opts){
            var me=this;
            list.itemId=site.val();
            me.pierChartTotal(list);
            me.lineChartTotal();
            me.determine();
            site.change(function(){
                list.itemId=site.val();
                me.pierChartTotal();
                for(var i=0;i<BaseInfo.length;i++){
                    var arr = BaseInfo[i];
                    if(list.itemId == arr.load_factor_item){
                        me.SmartBaseInfoChart(arr);
                        break;
                    }
                }
            });
        }
        // 数据概况
        ,pierChartTotal:function () {
            var me=this;
            $.ajax({
                url:"/Intelligent/v5_SmartGetLoadDiagram"
                ,data:list
                ,method:"post"
                ,success:function(res){
                    if(res.code == 0){
                        if(res.data.length!=0){
                            var atts = res.data;
                            me._renderList(atts.reverse());
                        }else {
                            alert("您选择的时间段没有信息,请重新选择。")
                        }
                    }else {
                        alert(res.msg)
                    }
                }
                ,error:function(){
                }
            });
        }
        // 数据概况BaseInfo
        ,lineChartTotal:function () {
            var me=this;
            $.ajax({
                url:"/Intelligent/v5_SmartBaseInfo"
                ,data:{}
                ,method:"post"
                ,success:function(res){
                    var atts = res.data;
                    console.log(res);
                    console.log(list.itemId);
                    BaseInfo=res.data.loads;
                    for(var i=0;i<res.data.loads.length;i++){
                        var arr = res.data.loads[i];
                        if(list.itemId == arr.load_factor_item){
                            me.SmartBaseInfoChart(arr);
                            break;
                        }
                    }
                }
                ,error:function(){

                }
            });
        }
        ,_renderList:function(data){
            var me=this;
            time=[];
            value=[];
            for(var i=0;i<data.length;i++){
                var arr=data[i];
                time.push(arr.name);
                value.push(arr.value);
            }

            me.trendRendering()
        }
