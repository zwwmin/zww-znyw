        ,determine:function () {
            var me=this;
            submit_btn.click(function () {
                list.begin=$('#stimes').val();
                list.end=$('#etimes').val();
                me.pierChartTotal();
            })
        }
        ,showTip:function(text,cb){

            var newTips = $("<div>");
            $("body").append(newTips);
            newTips.addClass('showtips');
            newTips.text(text);
            window.setTimeout(function() {
                newTips.addClass('active');
            }, 10);
            g_tips = window.setTimeout(function() {
                $(".showtips").remove();
                if(cb){
                    cb();
                }
            }, 3000);

        }
