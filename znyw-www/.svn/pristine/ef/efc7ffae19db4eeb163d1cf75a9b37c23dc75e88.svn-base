/*正式样式*/
.crop_box{ }
.crop_box .crop_bar{background:#5bc0de; overflow: hidden;max-width:800px;margin:0 auto 15px auto;}
.crop_box .crop_bar span{float: left; font-size:1rem;text-align: center; position:relative;width:25%; height:50px;}
.crop_box .crop_bar span:hover {background:#31b0d5;}
.crop_box .crop_bar span a{color:#fff;padding: 0 10px; display: inline-block;}
.crop_box .crop_bar span a i{ /*background: url(images/icon.png) no-repeat; background-size: 19px 74.5px;*/background-size: 16px 16px;display:block; margin:7px auto 4px;width: 16px; height: 16px;}
.crop_box .crop_bar span .a_select i{background: url("images/icon__select.png") no-repeat center center; background-size: 19px 12.5px; width: 19px; height:12.5px;margin-top:9px;margin-bottom: 6px;}

.crop_box .crop_bar span .a_trans i{background: url("images/icon__trans.png") no-repeat center center;background-size: 16px 16px; }

.crop_box .crop_bar span .a_turn_big i{background: url("images/icon__turn_big.png") no-repeat center center;background-size: 16px 16px; }
.crop_box .crop_bar span .a_turn_small  i{background: url("images/icon__turn_small.png") no-repeat center center; background-size: 16px 16px;}

.crop_box .crop_bar span .a_cut i{background: url("images/icon__cut.png") no-repeat center center;background-size: 16px 16px; }

.crop_box .crop_bar span .a_cancel i{background: url("images/icon__cancel.png") no-repeat; background-size: 19px 12.5px; width: 19px; height:12.5px;margin-top:9px;margin-bottom: 6px;}
.crop_box .crop_bar span .a_save i{background: url("images/icon__ok.png") no-repeat; background-size: 19px 12.5px;; width: 19px; height:12.5px;margin-top:9px;margin-bottom: 6px;}
.crop_box .crop_bar span .a1 i{background-position: 0 4px;}
.crop_box .crop_bar span .a2 i{background-position: 0 -10px; }
.crop_box .crop_bar span .a3 i{background-position: 0 -32px;}
.crop_box .crop_bar span .a4 i{background-position: 0 -49px; width: 13px; height: 13px; margin-top:9px; margin-bottom: 6px;}
.crop_box .crop_bar span .a5 i{background-position: 0 -62px; width: 19px; height:12.5px;margin-top:9px;margin-bottom: 6px;}


.crop_box .crop_bar .s2 a{margin:0 2px;}
.crop_box .crop_bar .s2 b{width:32px; height: 1px; background-color:#fff; overflow: hidden; position: absolute; left: 50%; top: 50%; margin: -7px 0 0 -16px;}
.crop_box .crop_img_box{position: relative;overflow:hidden;}
.crop_box .crop_img_box .crop_show_box{position: absolute; top:0; left:0;}
.imgcut-loading-tips{
    background: url("images/loader.gif") center center;
    width: 24px; margin: 0 auto; padding-top: 15px;
}

.cropControls{
    z-index:2;
    position:absolute;
    height:30px;
    display:block;
    /* top: -31px; */
    top: -1px;
    right: -1px;
    font-family:sans-serif;
    background-color:rgba(0,0,0,0.35);
}

.cropControls i{
    display:block;
    float:left;
    margin:0;
    cursor:pointer;
    background-image:url('images/cropperIcons.png');
    width:30px;
    height:30px;
    text-align:center;
    line-height:20px;
    color:#FFF;
    font-size:13px;
    font-weight: bold;
    font-style: normal;

}

.cropControls i:hover{ background-color:rgba(0,0,0,0.7);  }

.cropControls i.cropControlZoomMuchIn{ background-position:0px 0px;}
.cropControls i.cropControlZoomIn{ background-position:-30px 0px; }
.cropControls i.cropControlZoomOut{ background-position:-60px 0px; }
.cropControls i.cropControlZoomMuchOut{ background-position:-90px 0px; }
.cropControls i.cropControlRotateLeft{ background-position:-210px 0px; }
.cropControls i.cropControlRotateRight{ background-position:-240px 0px; }
.cropControls i.cropControlCrop{ background-position:-120px 0px;}
.cropControls i.cropControlUpload{ background-position:-150px 0px;}
.cropControls i.cropControlReset{ background-position:-180px 0px;}
.cropControls i.cropControlRemoveCroppedImage{ background-position:-180px 0px;}

.cropControls i:last-child{
    margin-right:none;
}