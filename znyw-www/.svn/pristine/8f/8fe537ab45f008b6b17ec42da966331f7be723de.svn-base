.showtips{position:fixed;z-index: 999999;bottom:50%;opacity:0;background-color:rgba(0,0,0,.5);padding:6px 6px;border-radius:10px;left:50%;min-width:100px;max-width:80%;-webkit-transform: translateX(-50%);-moz-transform: translateX(-50%);-ms-transform: translateX(-50%);-o-transform: translateX(-50%);transform: translateX(-50%);margin-top:-10px;color:#fff;text-align: center; font-size:14px;}
.showtips.active{-webkit-animation:tips 4s;-o-animation:tips 4s;animation:tips 4s;}
@-webkit-keyframes tips{
    from{-webkit-transform: translateX(-50%);}
    43%{-webkit-transform:translateX(-50%);opacity:1;}
    70%{opacity:1}
    to{opacity:0}
}
@-o-keyframes tips{
    from{-o-transform:translateX(-50%);}
    43%{-o-transform:translateX(-50%);opacity:1;}
    70%{opacity:1}
    to{opacity:0}
}
@keyframes tips{
    from{transform:translateX(-50%);}
    43%{transform:translateX(-50%);opacity:1;}
    70%{opacity:1}
    to{opacity:0}
}
.code_make{
    position: fixed;top:0;right:0;
    left:0;bottom:0;width: 100%;height: 100%;background: rgba(0,0,0,0.5);z-index: 999999;
}
.code_make_center{
    width: 80%;height: 225px;margin: 35% auto 0 auto;background: white;position: relative;box-shadow: 0 0 9px #A6A5A5;
    border-radius: 9px;overflow: inherit;
}
.code_make_center span{
    display: block;font-size: 24px;text-align: center;color: #000000;padding-top: 20px;
}
.code_make_center img{
    display:block;width: 60%;height: 45px;margin: 15px auto 0 auto;
}
.code_make_center input{
    width: calc(100% - 44px );
    height: 26px;
    margin: 20px auto 0 auto;
    border-bottom: 0.5px solid #d6d6d6;text-align: center;    display: block;
    padding-left: 5px;
    font-size: 18px;
    color: #9b9b9b;

}
.repair_quickApply_btn{
    width: 100%;
    height: 45px;
    background: rgb(31, 188, 236);;
    text-align: center;
    line-height: 45px;
    color: white;
    position: absolute;
    bottom: 0;
    left: 0;
    border-radius:0 0 9px 9px ;
}
